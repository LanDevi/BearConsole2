<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textViewConfigTitleTab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/general_config"
        android:textColor="?attr/tC"
        android:elegantTextHeight="true"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/application_langage_config"
        android:textColor="?attr/tC"
        android:id="@+id/txtViewAppLang"
        android:layout_below="@+id/textViewConfigTitleTab1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"/>

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerLanguage"
        android:layout_width="175dp"
        android:layout_alignBaseline="@+id/txtViewAppLang"
        android:layout_alignParentRight="true"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graph_color_config"
        android:textColor="?attr/tC"
        android:id="@+id/txtViewGraphColor"
        android:layout_below="@+id/txtViewAppLang"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGraphColor"
        android:layout_width="175dp"
        android:layout_alignBaseline="@+id/txtViewGraphColor"
        android:layout_alignParentRight="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/application_units_config"
        android:textColor="?attr/tC"
        android:id="@+id/txtViewUnits"
        android:layout_below="@+id/txtViewGraphColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerUnits"
        android:layout_alignBaseline="@+id/txtViewUnits"
        android:layout_width="175dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graph_back_color_config"
        android:textColor="?attr/tC"
        android:id="@+id/txtViewGraphBackColor"
        android:layout_below="@+id/txtViewUnits"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />


    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGraphBackColor"
        android:layout_alignBaseline="@+id/txtViewGraphBackColor"
        android:layout_width="175dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/font_size"
        android:textColor="?attr/tC"
        android:id="@+id/txtViewFontSize"
        android:layout_below="@+id/txtViewGraphBackColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFontSize"
        android:layout_alignBaseline="@+id/txtViewFontSize"
        android:layout_width="175dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/baud_rate"
        android:textColor="?attr/tC"
        android:id="@+id/textViewBaudRate"
        android:layout_below="@+id/txtViewFontSize"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerBaudRate"
        android:layout_alignBaseline="@+id/textViewBaudRate"
        android:layout_width="175dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connection_type"
        android:textColor="?attr/tC"
        android:id="@+id/textConnectionType"
        android:layout_below="@+id/textViewBaudRate"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />
    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerConnectionType"
        android:layout_alignBaseline="@+id/textConnectionType"
        android:layout_width="175dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graphiclib_type"
        android:textColor="?attr/tC"
        android:id="@+id/textGraphicLibType"
        android:layout_below="@+id/textConnectionType"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />
    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGraphicLibType"
        android:layout_alignBaseline="@+id/textGraphicLibType"
        android:layout_width="175dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MultipleMainDrogue"
        android:textColor="?attr/tC"
        android:id="@+id/textAllowMultipleMainDrogue"
        android:layout_below="@+id/textGraphicLibType"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />

    <CheckBox
        android:id="@+id/checkBoxAllowMultipleMainDrogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAllowMultipleMainDrogue"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FullUSBSupport"
        android:textColor="?attr/tC"
        android:id="@+id/textFullUSBSupport"
        android:layout_below="@+id/textAllowMultipleMainDrogue"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />
    <CheckBox
        android:id="@+id/checkBoxFullUSBSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textFullUSBSupport"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Dark mode"
        android:textColor="?attr/tC"
        android:id="@+id/textEnableDarkMode"
        android:layout_below="@+id/textFullUSBSupport"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />
    <Switch
        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textEnableDarkMode"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
